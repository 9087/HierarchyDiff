<Application x:Class="HierarchyDiff.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HierarchyDiff"
             xmlns:modernwpf="http://schemas.modernwpf.com/2019"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Fluent;component/Themes/Generic.xaml" />
        <modernwpf:ThemeResources />
        <modernwpf:XamlControlsResources />
      </ResourceDictionary.MergedDictionaries>
      <SolidColorBrush x:Key="SourceHighlightBrush" Color="#FFFFC864" />
      <SolidColorBrush x:Key="TargetHighlightBrush" Color="#FFFFFF00" />
      <SolidColorBrush x:Key="ValueDifferenceHighlightBrush" Color="#FFDCDCFF" />
      <SolidColorBrush x:Key="ValueDifferenceTextBackgroundBrush" Color="#FFC86464" />
      <SolidColorBrush x:Key="PlaceholderBrush" Color="#FFC8C8C8" />
      <Color x:Key="GutterBackgroundColor" R="200" G="200" B="200" A="255"/>
      <SolidColorBrush x:Key="GutterBackgroundBrush" Color="{StaticResource GutterBackgroundColor}"/>
      <SolidColorBrush x:Key="GutterIconBrush" Color="#FF2795AA" />
    </ResourceDictionary>
  </Application.Resources>
</Application>